{
  "browser_specific_settings": {
    "gecko": {
      "id": "set-aside-tabs@kuangkuang",
      "strict_min_version": "57.0a1"
    }
  },
  "manifest_version": 2,
  "name": "Set Aside Tabs",
  "version": "1.0",
  "description": "A firefox addon to set aside tabs",
  "homepage_url": "https://github.com/kun-fang/set-aside-tabs",
  "icons": {
    "48": "set-aside-icon-48.png",
    "96": "set-aside-icon-96.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "set-aside-icon-48.png",
    "default_title": "Set Aside Tabs"
  },

  "permissions": ["<all_urls>", "sessions", "tabs", "storage", "management"],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; img-src 'self' data:"

}